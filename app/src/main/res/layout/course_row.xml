<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_material_padding">

    <EditText
        android:id="@+id/course_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:hint="@string/gpa_course_name"
        android:layout_weight="2"
        android:inputType="text" />

    <EditText
        android:id="@+id/course_hours"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:hint="@string/gpa_hours"
        android:layout_weight="1"
        android:paddingLeft="@dimen/default_material_padding_half"
        android:paddingRight="@dimen/default_material_padding_half"
        android:inputType="number" />

    <Spinner
        android:id="@+id/course_grade"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:entries="@array/grades"
        android:layout_weight="1" />


</LinearLayout>